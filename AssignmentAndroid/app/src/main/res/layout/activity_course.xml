<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".screens.courseactivity.CourseActivity">
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:onClick="onClickCard"
            android:id="@+id/card_my_course"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            app:cardCornerRadius="@dimen/corner_radius_10dp">
            <TextView
                android:textColor="#00B8D4"
                android:textSize="@dimen/text_size_label_30sp"
                android:textAlignment="center"
                android:background="@drawable/my_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/label_card_my_course"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:onClick="onClickCard"
            android:id="@+id/card_registration"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            app:cardCornerRadius="@dimen/corner_radius_10dp">
            <TextView
                android:textColor="#00B8D4"
                android:textSize="@dimen/text_size_label_30sp"
                android:textAlignment="center"
                android:background="@drawable/course_registration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:onClick="onClickCard"
            android:id="@+id/card_registration_student"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            app:cardCornerRadius="@dimen/corner_radius_10dp">
            <TextView
                android:textColor="#00B8D4"
                android:textSize="@dimen/text_size_label_30sp"
                android:textAlignment="center"
                android:background="@drawable/student_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:onClick="onClickCard"
            android:id="@+id/card_student"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            app:cardCornerRadius="@dimen/corner_radius_10dp">
            <TextView
                android:textColor="#00B8D4"
                android:textSize="@dimen/text_size_label_30sp"
                android:textAlignment="center"
                android:background="@drawable/student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>