<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="230dp"
    android:layout_width="180dp"
    android:layout_margin="@dimen/margin_15dp"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_student"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/corner_radius_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="@dimen/padding_10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:id="@+id/card_avata"
                app:cardCornerRadius="100dp"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/img_avata"
                    android:src="@drawable/student"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@id/card_avata"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/tx_name"/>
            <ImageView
                android:id="@+id/img_gender"
                android:layout_margin="5dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/gender"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:id="@+id/img_menu"/>
            <TextView
                android:id="@+id/date"
                android:gravity="center"
                android:layout_below="@id/tx_name"
                android:text="10-10-20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/registration_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20-20-2022"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>