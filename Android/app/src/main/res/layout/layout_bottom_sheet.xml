<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="@dimen/padding_10dp"
    android:background="@drawable/drawable_bottom_sheet"
    android:id="@+id/bottom_sheet_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm sinh viên"
        android:textSize="40dp"
        android:gravity="center"
        android:id="@+id/title"/>
    <View
        android:id="@+id/divice"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/title"/>
    <EditText
        android:paddingLeft="@dimen/padding_20dp"
        android:background="@drawable/border_radiu_ed"
        android:layout_marginTop="20dp"
        android:layout_below="@id/divice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ed_name"
        android:hint="@string/text_label_hint_name"/>
    <EditText
        android:editable="false"
        android:paddingLeft="@dimen/padding_20dp"
        android:background="@drawable/border_radiu_ed"
        android:layout_marginTop="@dimen/margin_top_10dp"
        android:layout_below="@id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50dp"
        android:id="@+id/ed_date_of_birth"
        android:hint="@string/text_label_hint_date_of_birth"/>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/layout_gender"
        android:layout_marginTop="@dimen/margin_top_10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ed_date_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginRight="50dp"
            android:src="@drawable/female"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/img_female"
            android:hint="@string/text_label_hint_name"/>
        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginLeft="50dp"
            android:src="@drawable/male"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/img_male"
            android:hint="@string/text_label_hint_name"/>
    </LinearLayout>
    <View
        android:layout_marginBottom="10dp"
        android:layout_below="@id/layout_gender"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:id="@+id/divice_2"/>
    <Button
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:text="Save"
        android:layout_below="@id/divice_2"/>
</RelativeLayout>