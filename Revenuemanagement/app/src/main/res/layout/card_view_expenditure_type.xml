<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/card_view_expenditure_type"
    android:layout_margin="10dp"
    android:layout_width="160dp"
    android:layout_height="160dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginRight="6dp"
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/mimageupdate"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"/>
            <ImageView
                android:id="@+id/mimagedelete"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_delete_cardview_green"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:id="@+id/header">
                <TextView
                    android:textColor="#2962FF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:id="@+id/mtitle"/>
                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/category_outfit"
                    android:textColor="#80D21F"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/mcategory"/>
            </LinearLayout>
            <TextView
                android:layout_marginBottom="22dp"
                android:layout_marginTop="20dp"
                android:textColor="#111112"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textSize="16dp"
                android:layout_below="@id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="description"
                android:id="@+id/mdescription"/>
        </RelativeLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>