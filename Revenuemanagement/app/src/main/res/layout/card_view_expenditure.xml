<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_expenditure"
    android:layout_width="match_parent"
    android:elevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp"
    android:layout_height="200dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/subTitleColor"
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/headerCoin"
                    android:layout_alignParentRight="true"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/coins"
                        android:paddingRight="3dp"
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/coins"/>
                    <TextView
                        android:id="@+id/mmoney"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#020202"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2220"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/headerCoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_local_atm_black_24dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/mkind"/>
                    <TextView
                        android:shadowDy="1"
                        android:shadowDx="1"
                        android:shadowRadius="2"
                        android:shadowColor="#151414"
                        android:textColor="#FBFAF8"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:paddingRight="60dp"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mtitle"
                        android:text="Title"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#2FA661"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="abc"
                        android:id="@+id/mdate"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:paddingTop="10dp"
                        android:layout_below="@id/mdate"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="description"
                        android:id="@+id/mdescription"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>