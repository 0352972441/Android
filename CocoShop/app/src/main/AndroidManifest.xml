<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cocoshop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:theme="@style/splashScreenTheme"
            android:name=".Screen.SplashScreen.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Screen.AuthScreen.SignUpScreenActivity" android:theme="@style/noActionBar" android:screenOrientation="fullSensor"/>
        <activity android:name=".Screen.ChangePasswordScreen.ChangePasswordScreen" />
        <activity android:name=".Screen.HomeScreen.HomeScreen" />
        <activity android:name=".Screen.AuthScreen.LoginScreen" android:theme="@style/noActionBar" android:screenOrientation="fullSensor"/>
        <activity android:name=".MainActivity">
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
    </application>

</manifest>