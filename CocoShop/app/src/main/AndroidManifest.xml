<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cocoshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screen.SearchActivity" android:theme="@style/HomeAppTheme"></activity>
        <activity android:name=".screen.profilescreen.TermOfUseActivity" />
        <activity android:name=".screen.profilescreen.InfomationActivity" />
        <activity android:name=".screen.profilescreen.PolicyActivity" />
        <activity android:name=".screen.topicsscreen.MultipleChoiceActivity" />
        <activity
            android:name=".screen.profilescreen.MyFavoriteActivity"
            android:theme="@style/HomeAppTheme" />
        <activity android:name=".screen.topicsscreen.LearningTopicActivity" />
        <activity
            android:name=".screen.audioscreen.PlayAudioActivity"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".screen.audioscreen.MainAudioActivity"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".screen.SplashScreen"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.authscreen.SignUpScreenActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/noActionBar" />
        <activity android:name=".screen.authscreen.ChangePasswordScreen" />
        <activity
            android:name=".screen.HomeScreen"
            android:theme="@style/HomeAppTheme" /> <!-- android:theme="@style/noActionBar" -->
        <activity
            android:name=".screen.authscreen.LoginScreen"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/ActionBarOnBoading">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
    </application>

</manifest>