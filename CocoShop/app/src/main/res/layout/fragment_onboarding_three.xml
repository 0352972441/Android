<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".ui.Onboarding.OnboardingThree">

    <ImageView
        android:id="@+id/im"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:src="@drawable/onboardingthree"/>
    <TextView
        android:textColor="@color/colorTextBoarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:layout_below="@id/im"
        android:layout_marginTop="20dp"
        android:text="@string/onThree"
        android:textSize="40dp"
        android:id="@+id/title"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:textColor="@color/colorTextBoarding2"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="15dp"
        android:text="@string/descriptionThree"/>

</LinearLayout>