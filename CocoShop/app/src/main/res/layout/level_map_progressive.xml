<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_20dp"
        android:layout_width="130dp"
        android:layout_height="150dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="UselessParent">
        <androidx.cardview.widget.CardView
            android:id="@+id/mission"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="@dimen/cardView_radiu_100dp">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/background_mission"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/star"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_size_24dp"
                android:layout_gravity="center|top"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_size_24dp"
                    android:layout_height="@dimen/icon_size_24dp"
                    android:id="@+id/imgStarBad"/>
                <ImageView
                    android:layout_width="@dimen/icon_size_24dp"
                    android:layout_height="@dimen/icon_size_24dp"
                    android:id="@+id/imgStarGood"/>
                <ImageView
                    android:layout_width="@dimen/icon_size_24dp"
                    android:layout_height="@dimen/icon_size_24dp"
                    android:id="@+id/imgStarExellent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txLessonName"
            android:layout_below="@id/mission"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nói xin chào"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>