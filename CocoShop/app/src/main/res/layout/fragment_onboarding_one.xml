<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".ui.Onboarding.OnboardingOne">

    <ImageView
    android:id="@+id/im"
    android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
    android:src="@drawable/onboardingone"/>
    <TextView
        android:textColor="@color/colorTextBoarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/onOne"
        android:textSize="40dp"
        android:id="@+id/title"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:textColor="@color/colorTextBoarding2"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_label_title_18dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="15dp"
        android:text="@string/descriptionOne"
        tools:ignore="SpUsage" />

</LinearLayout>