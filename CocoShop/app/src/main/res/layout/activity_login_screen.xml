<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".screen.authscreen.LoginScreen">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="5"
                    android:id="@+id/rlLayout"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_weight="1.2"
                        android:id="@+id/logo"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/splash_buzzbee"/>
                    <LinearLayout
                        android:layout_weight="2.5"
                        android:layout_below="@id/logo"
                        android:id="@+id/lnLayout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_below="@id/logo"
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_signin"
                            android:id="@+id/mtxTtile"
                            android:textSize="20dp"
                            android:textColor="#090909"
                            android:textStyle="bold"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:paddingStart="@dimen/padding_5dp"
                            android:drawableStart="@drawable/ic_account_circle_blue_24dp"
                            android:drawablePadding="@dimen/padding_10dp"
                            android:layout_width="match_parent"
                            android:id="@+id/medGmail"
                            android:textColorHint="@color/hint_color"
                            app:hintAnimationEnabled="true"
                            android:hint="@string/label_hint_email"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittext_custom"
                            android:layout_height="@dimen/height_text_input_edittext_50dp"
                            android:inputType="textEmailAddress"
                            app:errorEnabled="true"
                            tools:ignore="RtlSymmetry">
                        </com.google.android.material.textfield.TextInputEditText>

                        <com.google.android.material.textfield.TextInputEditText
                            android:paddingStart="@dimen/padding_5dp"
                            android:drawablePadding="@dimen/padding_10dp"
                            android:drawableStart="@drawable/ic_lock_outline_blue_24dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:id="@+id/medPassword"
                            android:hint="@string/label_hint_password"
                            android:textColorHint="@color/hint_color"
                            app:passwordToggleEnabled="true"
                            android:layout_height="@dimen/height_text_input_edittext_50dp"
                            android:inputType="textPassword"
                            android:background="@drawable/edittext_custom"
                            app:errorEnabled="true">
                        </com.google.android.material.textfield.TextInputEditText>
                        <Button
                            android:gravity="center"
                            android:layout_marginTop="@dimen/margin_top_10dp"
                            android:background="@drawable/button_custom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mbtnLg"
                            android:textColor="#ffffffff"
                            android:text="@string/label_button_login"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:textSize="@dimen/text_size_label_level_16sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/txsignwith"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_signWith"/>
                        <include
                            android:id="@+id/bottomLayoutButtonSignInWith"
                            layout="@layout/bottomlayoutlogin"/>
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal"
                            android:layout_below="@id/bottomLayoutButtonSignInWith"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="right"
                                android:layout_marginStart="@dimen/padding_left_15dp"
                                android:textSize="@dimen/text_size_label_question_sign_with_15dp"
                                android:textColor="#000000"
                                android:layout_marginTop="10dp"
                                android:id="@+id/mtxquestion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_question_not_account"
                                tools:ignore="SpUsage" />
                            <TextView
                                android:layout_marginStart="8dp"
                                android:textSize="@dimen/text_size_label_sign_with_18dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="10dp"
                                android:id="@+id/mtxChange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_change_activity_signup"
                                tools:ignore="SpUsage" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <com.agrawalsuneet.dotsloader.loaders.CircularDotsLoader
        android:visibility="invisible"
        android:id="@+id/progress_circular"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:loader_animDur="100"
        app:loader_bigCircleRadius="42dp"
        app:loader_circleRadius="14dp"
        app:loader_defaultColor="@color/colorPrimary"
        app:loader_firstShadowColor="@color/yellow"
        app:loader_secondShadowColor="@color/grey"
        app:loader_selectedColor="@color/blue_sky_color"
        app:loader_showRunningShadow="true" />
</FrameLayout>