<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_margin="@dimen/margin_all_view_10dp"
        android:id="@+id/txTitleNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txTitleWidget"
            android:textSize="@dimen/text_size_label_title_18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="New"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:ignore="SpUsage" />
        <TextView
            android:id="@+id/txmoreWidget"
            android:textAlignment="textEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="more"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/txTitleNew"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/recyclerView">
    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>
