<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:padding="@dimen/padding_10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        tools:ignore="UselessParent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/radiu_10dp"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:id="@+id/cardItemAudio">
            <RelativeLayout
                android:id="@+id/background_audio"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/txTitleAudio"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_label_item_audio_25dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name audio"/>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/margin_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/icon_size_24dp"
                        android:layout_height="@dimen/icon_size_24dp"
                        app:cardCornerRadius="@dimen/cardView_radiu_100dp">
                        <ImageView
                            android:id="@+id/imgReader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/singger"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/readerName"
                        android:text="ToÃ¡n"
                        android:paddingLeft="@dimen/padding_10dp"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/imgPlay"
        android:layout_width="@dimen/icon_size_48dp"
        android:layout_height="@dimen/icon_size_48dp"
        android:src="@drawable/ic_play_circle_audio_bluesky_24dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin_10dp"/>
</FrameLayout>
