<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginStart="10dp"
    android:layout_width="160dp"
    android:layout_marginRight="@dimen/margin_5dp"
    android:layout_marginTop="@dimen/margin_5dp"
    android:layout_marginBottom="@dimen/margin_5dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="160dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardview"
        android:layout_height="160dp">
        <FrameLayout
            android:id="@+id/cardBackground"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_background"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/margin_10dp"
                        app:cardCornerRadius="@dimen/cardView_radiu_100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:background="#186C54"
                            android:fontFamily="@font/font_card_topic"
                            android:textColor="@color/white"
                            android:id="@+id/tx_level"
                            android:elevation="7dp"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_label_level_12sp"
                            android:padding="@dimen/padding_5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beginer"/>
                    </androidx.cardview.widget.CardView>
                    <!--<TextView
                        android:id="@+id/tx_level"
                        android:paddingLeft="@dimen/padding_left_15dp"
                        android:layout_marginTop="@dimen/margin_top_20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transaction"
                        android:textStyle="bold"/>-->
                    <!--<TextView
                        android:id="@+id/txCountCard"
                        android:paddingLeft="@dimen/padding_left_15dp"
                        android:layout_marginTop="@dimen/margin_top_10dp"
                        android:layout_below="@id/tx_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10 card"/>-->
                </RelativeLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview"
        android:text="Name"
        android:id="@+id/tx_name"
        android:gravity="center"
        android:paddingTop="@dimen/padding_5dp"/>
</RelativeLayout>