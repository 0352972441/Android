<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_margin="@dimen/margin_20dp"
        android:id="@+id/relative_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/icon_speaker"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/icon_size_48dp"
            android:layout_height="@dimen/icon_size_48dp"
            android:id="@+id/img_speaker"/>
    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/padding_5dp"
        android:layout_margin="@dimen/margin_20dp"
        android:layout_below="@+id/relative_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/muiltip_choice">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/margin_top_80dp"
            android:id="@+id/card_answer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="@dimen/radiu_10dp">
            <TextView
                android:textSize="@dimen/text_size_label_title_18dp"
                android:id="@+id/tx_answer_1"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_text_50dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/margin_top_10dp"
            android:layout_below="@id/card_answer_1"
            android:id="@+id/card_answer_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/radiu_10dp">
            <TextView
                android:textSize="@dimen/text_size_label_title_18dp"
                android:id="@+id/tx_answer_2"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_text_50dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/margin_top_10dp"
            android:layout_below="@id/card_answer_2"
            android:id="@+id/card_answer_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/radiu_10dp">
            <TextView
                android:textSize="@dimen/text_size_label_title_18dp"
                android:id="@+id/tx_answer_3"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_text_50dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="@dimen/margin_bottom_10dp"
            android:layout_marginTop="@dimen/margin_top_10dp"
            android:layout_below="@id/card_answer_3"
            android:id="@+id/card_answer_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/radiu_10dp">
            <TextView
                android:textSize="@dimen/text_size_label_title_18dp"
                android:id="@+id/tx_answer_4"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_text_50dp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <FrameLayout
        android:visibility="invisible"
        android:id="@+id/bottom_sheet_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_bottom_sheet">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:text="Define"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_label_title_18dp"
                android:id="@+id/tx_define"
                tools:ignore="SpUsage" />
            <TextView
                android:layout_marginTop="@dimen/margin_top_10dp"
                android:layout_below="@id/tx_define"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_label_title_28sp"
                android:id="@+id/tx_mean"
                tools:ignore="SpUsage" />
        </RelativeLayout>
        <ImageView
            android:src="@drawable/ic_keyboard_arrow_next_blue_24dp"
            android:layout_width="@dimen/icon_size_48dp"
            android:layout_height="@dimen/icon_size_48dp"
            android:layout_gravity="bottom|right"
            android:padding="@dimen/padding_10dp"
            android:id="@+id/img_next_question"/>
    </FrameLayout>

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/complete_topic"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/finish_star"/>
        <TextView
            android:layout_below="@id/finish_star"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tx_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:layout_below="@id/tx_point"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_label_title_18dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tx_answer_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>