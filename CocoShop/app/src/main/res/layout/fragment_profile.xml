<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imagebackground"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background_profile" />
                <RelativeLayout
                    android:background="@drawable/backroundproile_screen"
                    android:layout_marginTop="120dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgSetting"
                        android:layout_margin="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/setting_profile_24"/>
                    <include
                        android:id="@+id/ltcontentProfile"
                        layout="@layout/content_profile"/>
                </RelativeLayout>
        </FrameLayout>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/avataprofile"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatadefault"/>
    </FrameLayout>
</ScrollView>