<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/radiu_size_cardview_10dp"
    android:background="@color/colorPrimary"
    android:id="@+id/card_item_popular"
    android:layout_height="@dimen/icon_size_85dp">
    <RelativeLayout
        android:id="@+id/background_card_item_audio_popular"
        android:padding="@dimen/padding_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/radiu_10dp"
            android:id="@+id/layout_img_audio_popular"
            android:layout_width="@dimen/icon_size_85dp"
            android:layout_height="@dimen/icon_size_85dp">
            <ImageView
                android:background="@drawable/border_radiu_img_card_item_popular"
                android:src="@drawable/background_card_item"
                android:layout_width="@dimen/icon_size_85dp"
                android:layout_height="@dimen/icon_size_85dp"
                android:id="@+id/img_audio_popular"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="@dimen/icon_size_48dp"
            android:layout_height="@dimen/icon_size_48dp"
            android:src="@drawable/ic_play_circle_audio_bluesky_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/img_play_popular"/>
        <RelativeLayout
            android:paddingStart="@dimen/padding_10dp"
            android:layout_toEndOf="@id/layout_img_audio_popular"
            android:layout_toStartOf="@id/img_play_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_audio_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_label_title_18dp"
                tools:ignore="SpUsage" />
            <TextView
                android:id="@+id/reader_name_audio_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_label_level_12sp"
                android:text="Hana"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

